{
    "id": "dl.control.ex",
    "name": "Silly Robot Example Model",
    "version": "1.0",
    "description": "Silly Robot example model.",
    "vendorName": "NLPCraft",
    "vendorUrl": "https://www.nlpcraft.org",
    "vendorContact": "Support",
    "vendorEmail": "info@nlpcraft.org",
    "docsUrl": "https://www.nlpcraft.org",
    "examples": [
        "Turn on the radio",
        "Turn off the radio",
        "What is current state of the radio?",
        "Start the washing machine"
    ],
    "elements": [
        {
            "id": "ctrl:start",
            "description": "Start command.",
            "group": "operation",
            "synonyms": [
                "{start|launch|go|{turn|put} on}"
            ]
        },
        {
            "id": "ctrl:stop",
            "description": "Stop command.",
            "group": "operation",
            "synonyms": [
                "{stop|halt|abort|{turn|put} off}"
            ]
        },
        {
            "id": "ctrl:state",
            "description": "State command.",
            "group": "operation",
            "synonyms": [
                "{state|status|condition|check|verify|review}"
            ]
        },
        {
            "id": "ctrl:subject",
            "description": "Object to control.",
            "group": "subject",
            "synonyms": [
                "{```JJ```|```JJR```|```JJS```|```VBG```|*} {```NN```|```NNS```|```NNP```|```NNPS```}"
            ]
        }

    ],
    "defaultTrivia": "true"
}